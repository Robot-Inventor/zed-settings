// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
    "inlay_hints": {
        "enabled": true
    },
    "wsl_connections": [
        {
            "distro_name": "Ubuntu",
            "user": null,
            "projects": []
        }
    ],
    "icon_theme": "Material Icon Theme",
    "telemetry": {
        "diagnostics": false,
        "metrics": false
    },
    "agent": {
        "default_model": {
            "provider": "copilot_chat",
            "model": "gpt-5-mini"
        },
        "enabled": true,
        "button": true,
        "model_parameters": []
    },
    "preview_tabs": {
        "enabled": false
    },
    "minimap": {
        "show": "auto"
    },
    "buffer_font_fallbacks": ["Noto Sans JP", "monospace"],
    "buffer_font_family": "Moralerspace Neon",
    "file_types": {
        "markdown": ["*.mdx"],
        "Processing": ["*.pde"],
        "shellsession": ["*.shellsession"]
    },
    "linked_edits": true,
    "show_whitespaces": "boundary",
    "show_edit_predictions": true,
    "soft_wrap": "none",
    "base_keymap": "VSCode",
    "ui_font_size": 16,
    "buffer_font_size": 15,
    "theme": {
        "mode": "system",
        "light": "One Light",
        "dark": "Moonlight"
    },
    "features": {
        "edit_prediction_provider": "copilot"
    },
    "tab_size": 4,
    "auto_install_extensions": {
        "html": true,
        "material-icon-theme": true,
        "moonlight": true,
        "toml": true,
        "rainbow-csv": true
    }
}
