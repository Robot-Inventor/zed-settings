// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
    "edit_predictions": {
        "provider": "copilot"
    },
    "project_panel": {
        "bold_folder_labels": true
    },
    "git_panel": {
        "tree_view": true
    },
    "sticky_scroll": {
        "enabled": true
    },
    "agent_servers": {
        "codex": {
            "default_model": "gpt-5.3-codex/medium",
            "default_mode": "full-access"
        }
    },
    "colorize_brackets": true,
    "inlay_hints": {
        "enabled": true
    },
    "wsl_connections": [
        {
            "distro_name": "Ubuntu",
            "user": null,
            "projects": []
        }
    ],
    "icon_theme": "Material Icon Theme",
    "telemetry": {
        "diagnostics": false,
        "metrics": false
    },
    "agent": {
        "notify_when_agent_waiting": "all_screens",
        "default_model": {
            "provider": "copilot_chat",
            "model": "gpt-5.1-codex-max"
        },
        "enabled": true,
        "button": true,
        "model_parameters": [],
        "show_turn_stats": true
    },
    "preview_tabs": {
        "enabled": false
    },
    "minimap": {
        "show": "auto"
    },
    "buffer_font_fallbacks": ["Noto Sans JP", "monospace"],
    "buffer_font_family": "Moralerspace Neon",
    "file_types": {
        "markdown": ["*.mdx"],
        "Processing": ["*.pde"],
        "shellsession": ["*.shellsession"]
    },
    "linked_edits": true,
    "show_whitespaces": "boundary",
    "show_edit_predictions": true,
    "soft_wrap": "none",
    "base_keymap": "VSCode",
    "ui_font_size": 16,
    "buffer_font_size": 15,
    "theme": {
        "mode": "system",
        "light": "One Light",
        "dark": "Moonlight"
    },
    "tab_size": 4,
    "auto_install_extensions": {
        "html": true,
        "material-icon-theme": true,
        "moonlight": true,
        "toml": true,
        "rainbow-csv": true,
        "cspell": true,
        "markdownlint": true,
        "csharp": true,
        "tsgo": true,
        "xml": true,
        "emmet": true,
        "processing": true
    },
    "languages": {
        "Git Commit": {
            "soft_wrap": "editor_width",
            "format_on_save": "off"
        },
        "Markdown": {
            "soft_wrap": "editor_width",
            "format_on_save": "on",
            "tab_size": 2
        },
        "TypeScript": {
            "language_servers": ["!vtsls", "!typescript-language-server", "tsgo", "..."]
        },
        "TSX": {
            "language_servers": ["!vtsls", "!typescript-language-server", "tsgo", "..."]
        },
        "JavaScript": {
            "language_servers": ["!vtsls", "!typescript-language-server", "tsgo", "..."]
        }
    }
}
